Executable mpidl
  Hs-source-dirs:      exec
  Main-is:             Main.hs

  Build-depends:       base      == 4.*
                     , directory >= 1.0 && < 1.2
                     , cmdargs   == 0.9.*
                     , peggy     == 0.3.*
                     , msgpack-idl

Test-Suite mpidl_test
  Type:                exitcode-stdio-1.0
  Main-is:             Language/MessagePack/IDL/Test/TestMain.hs
  Build-Depends:       base == 4.*
                     , test-framework >= 0.6
                     , test-framework-quickcheck2 >= 0.2
                     , test-framework-hunit >= 0.2
                     , QuickCheck >= 2
                     , HUnit >= 1.2
                     , bytestring       == 0.9.*
                     , text             == 0.11.*
                     , shakespeare-text == 1.0.*
                     , blaze-builder    == 0.3.*
                     , template-haskell >= 2.5 && < 2.8
                     , containers       == 0.4.*
                     , filepath         >= 1.1 && < 1.4
                     , directory
                     , msgpack          == 0.7.*
                     , peggy            == 0.3.*
                     , regex-base       >= 0.93
                     , regex-posix      >= 0.93